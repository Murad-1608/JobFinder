@model WebUI.Models.ViewModels.FilterViewModel

<div class="col-lg-4 sidebar">
    <div class="single-slidebar">
        <input type="text" class="form-control" placeholder="Açar söz" />
        <br />
        <h5>Şəhər</h5>
        <select class="form-control">
            @foreach (var item in Model.Cities)
            {
                <option class="form-control" href="category.html">@item.Name</option>
            }
        </select>
        <br />
        <h5>Kateqoriya</h5>
        <select class="form-control">
            @foreach (var item in Model.Cateories)
            {
                <option class="form-control" href="category.html">@item.Name</option>
            }
        </select>
        <br />
        <h5>İş təcrübəsi</h5>
        <select class="form-control">
            <option class="form-control" href="category.html">1 ildən az</option>
            <option class="form-control" href="category.html">1 ildən 3 ilə qədər</option>
        </select>
        <br />
        <h5>Təhsil</h5>
        <select class="form-control">
            <option class="form-control" href="category.html">Orta</option>
            <option class="form-control" href="category.html">Natamam ali</option>
            <option class="form-control" href="category.html">Ali</option>
        </select>
        <br />
        <button class="genric-btn success circle form-control">Axtar</button>
    </div>

</div>