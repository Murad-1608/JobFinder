@using WebUI.Areas.Admin.Models;
@{
    Layout = "_Layout";
}
@model CategoryModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="card-body">
    <h3>Yeni kateqoriya əlavə et</h3>
    <br />
    <form class="forms-sample" asp-controller="category" asp-action="add" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputName1">Kateqoriya</label>
            <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="">
            <span asp-validation-for="Name" class="text-danger"></span>
            <br />
            <button type="submit" class="btn btn-info">Təstiqlə</button>
        </div>
    </form>
</div>
