@using Entity.Concrete;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IPagedList<Category>
@{
    Layout = "_Layout";
}



<table class="table table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th> Name</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td> <a asp-controller="category" asp-action="delete" asp-route-id="@Model[i].Id" class="btn btn-danger" onclick="return confirm('Silmək istəyirsiniz?')">Sil</a> </td>

            </tr>
        }


    </tbody>
</table>
<br />

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/admin/category/add" class="btn btn-info">Yeni kateqoriya yarat</a>