@model List<Education>

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <h2>
            Təhsil
        </h2>
        <div>
            <a asp-action="Create" class="btn btn-primary rounded-pill text-white" style="margin-right:10px">Yarat</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Ad</th>
                        @* <th>Status</th>*@
                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Education item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong>
                            </td>
                            <td>
                                <div style="display:flex;justify-content:flex-end">
@*                                    <a class="btn btn-warning rounded-pill text-white" style="margin-right:10px">Detail</a>
*@                                    <a asp-action="Update" asp-route-id=@item.Id class="btn btn-info rounded-pill text-white" style="margin-right:10px">Yenilə</a>
@*                                    <a class="btn btn-danger rounded-pill text-white" style="margin-right:10px">Delete</a>
*@                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />
